		</dependency>
		<dependency>
			<groupId>co.casterlabs</groupId>
			<artifactId>LocalServer</artifactId>
			<version>${project.parent.version}</version>
			<scope>compile</scope>
		</dependency>
		<dependency>
			<groupId>co.casterlabs</groupId>
			<artifactId>Util</artifactId>
			<version>${project.parent.version}</version>
