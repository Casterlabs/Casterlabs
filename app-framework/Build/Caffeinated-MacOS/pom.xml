<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<artifactId>Caffeinated-MacOS</artifactId>

	<parent>
		<groupId>co.casterlabs</groupId>
		<artifactId>Build</artifactId>
		<version>1.0.0</version>
		<relativePath>../pom.xml</relativePath>
	</parent>

	<pluginRepositories>
		<pluginRepository>
			<id>jcef-maven</id>
			<url>https://friwi.me/jcef/maven</url>
			<releases>
				<enabled>true</enabled>
			</releases>
			<snapshots>
				<enabled>true</enabled>
			</snapshots>
		</pluginRepository>
	</pluginRepositories>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-shade-plugin</artifactId>
				<version>3.2.1</version>
				<executions>
					<execution>
						<id>shade</id>
						<phase>package</phase>
						<goals>
							<goal>shade</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<shadedArtifactAttached>true</shadedArtifactAttached>
					<finalName>${project.artifactId}-jar-with-dependencies</finalName>
					<transformers>
						<transformer
							implementation="org.apache.maven.plugins.shade.resource.ManifestResourceTransformer">
							<mainClass>co.casterlabs.caffeinated.bootstrap.Bootstrap</mainClass>
						</transformer>
					</transformers>
					<filters>
						<filter>
							<artifact>*:*</artifact>
							<excludes>
								<exclude>jcef-natives-*.jar</exclude>
							</excludes>
						</filter>
					</filters>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.cef</groupId>
				<artifactId>jcef-bundle-maven-plugin</artifactId>
				<version>1.0</version>
				<executions>
					<execution>
						<id>macos</id>
						<goals>
							<goal>macosx64</goal>
						</goals>
						<configuration>
							<exportType>plain</exportType>
							<mainClass>co.casterlabs.caffeinated.bootstrap.Bootstrap</mainClass>
							<bundleName>casterlabs-caffeinated.app</bundleName>
							<bundleIdentifier>co.casterlabs.caffeinated</bundleIdentifier>
							<bundleDisplayName>Casterlabs Caffeinated</bundleDisplayName>
							<bundleCopyright>Â© Casterlabs 2019-2021</bundleCopyright>
							<relocations>
								<relocation>${project.artifactId}-jar-with-dependencies.jar:${project.artifactId}.jar</relocation>
								<relocation>../app_icon.icns:CefIcons.icns</relocation>
							</relocations>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

	<repositories>
		<repository>
			<id>jcef-maven</id>
			<url>https://friwi.me/jcef/maven</url>
		</repository>
	</repositories>

	<dependencies>
		<dependency>
			<groupId>co.casterlabs</groupId>
			<artifactId>Bootstrap</artifactId>
			<version>${project.parent.version}</version>
			<scope>compile</scope>
		</dependency>
		<dependency>
			<groupId>org.cef</groupId>
			<artifactId>jcef-main</artifactId>
			<version>84.3.8+gc8a556f+chromium-84.0.4147.105-build-17</version>
			<scope>compile</scope>
		</dependency>
	</dependencies>
</project>